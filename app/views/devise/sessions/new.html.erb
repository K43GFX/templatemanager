<div class="row" style="padding-top: 5%;">
<div class="col m2"></div>
   <div class="col s12 m8">
      <div class="card blue-grey darken-1 horizontal">
         <div class="card-stacked">
            <div class="card-content white-text">
               <span class="card-title">Template Manager: Authenticaton</span>
               <p>Your credentials, please.</p>
               <br>
               <div class="row">
                  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="row">
                     <div class="col s2"></div>
                     <div class="input-field col s8">
                        <%= f.text_field :email, { autofocus: true, class: "validate", required: true, autocomplete: "off" } %>
                        <label>Your E-mail Address</label>
                     </div>
                     <div class="col s2"></div>
                  </div>
                  <div class="row">
                     <div class="col s2"></div>
                     <div class="input-field col s8">
                        <%= f.text_field :password, { class: "validate", type: "password", required: true, autocomplete: "off" } %>
                        <label>Your Password</label>
                     </div>
                     <div class="col s2"></div>
                  </div>
                  <div class="row">
                     <div class="col s2"></div>
                     <div class="col s8">
                        <% if devise_mapping.rememberable? -%>
                        <div class="field" style="margin-bottom: 20px;">
                           <%= f.check_box :remember_me %>
                           <%= f.label :remember_me %>
                        </div>
                     </div>
                     <div class="col s2"></div>
                     <% end -%>
                  </div>
                  <div class="row">
                  <div class="col s2"></div>
                  <div class="col s8">
                  <%= f.submit "Log in", { class: "waves-effect waves-light btn", style: "width: 100%;" } %>
                </div>
                <div class="col s2"></div>
                  <% end %>
               </div>
            </div>
          </div>
            <div class="card-action">
               <%= render "devise/shared/links" %>
            </div>
         </div>
      </div>
      <div class="col m2"></div>
   </div>
</div>