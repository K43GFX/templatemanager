// Create & load snapshot name modal
$('.newsnapshotname').html("<%=j render 'snapshotname', :id => @machine %>");
Materialize.updateTextFields();
$('#snapshotname').modal();
$('#snapshotname').modal('open');

// Run after form input verified
$("#snapshotform").submit(function( event ) {
  Materialize.toast("Attempting to create snapshot...", 4000);
  event.preventDefault();
});