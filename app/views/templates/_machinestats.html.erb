          <div class="card blue-grey darken-1" style="height: 200px;">
          		<div class="card-content white-text">
                <% if machine.purpose == "template" %>
                <div class="row">
                  <div class="col s9">
          			<span class="card-title">Machine Overview</span>
              </div>
              <div class="col s3">
                <span class="chip right">Template</span>
              </div>
              </div>
              <% else %>
                <span class="card-title">Machine Overview</span>
              <% end %>
          			<p>Name: <b><%= machine.identifier %></b></p>
          			<p>State: <b><%= machine.state %></b></p>
                <p>IP Address: <b> <%= machine.try(:ipv4) || 'N/A' %></b></p>
          			<p>Last snapshot: <b><%= machine.try(:snap) || 'N/A' %></b></p>
          			<p>QA version: <b><%= machine.try(:qa) || 'N/A' %></b></p>
            	</div>
          </div>